{
    "name": "phplrt/lexer-contracts",
    "type": "library",
    "description": "A set of phplrt lexer abstractions",
    "license": "MIT",
    "keywords": ["abstractions", "contracts", "decoupling", "interfaces", "interoperability", "standards", "regex", "lexer", "token", "stream", "parsing", "tokenizer"],
    "homepage": "https://github.com/phplrt",
    "support": {
        "issues": "https://github.com/phplrt/phplrt/issues",
        "source": "https://github.com/phplrt/lexer-contracts"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Phplrt\\Contracts\\Lexer\\": "src"
        },
        "files": [
            "src/polyfill.php"
        ]
    },
    "require-dev": {
        "vimeo/psalm": "^5.15"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev",
            "dev-main": "3.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
