{
    "name": "phplrt/parser",
    "type": "library",
    "description": "The phplrt Parser package.",
    "license": "MIT",
    "keywords": ["parser", "llk", "ll1", "lr", "slr", "language", "php"],
    "homepage": "https://github.com/phplrt",
    "support": {
        "issues": "https://github.com/phplrt/phplrt/issues",
        "source": "https://github.com/phplrt/parser"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "phplrt/source": "^3.4",
        "phplrt/buffer": "^3.4",
        "phplrt/exception": "^3.4",
        "phplrt/parser-contracts": "^3.4",
        "phplrt/lexer-contracts": "^3.4",
        "phplrt/ast-contracts": "^3.4"
    },
    "replace": {
        "phplrt/grammar": "<=3.1",
        "phplrt/grammar-contracts": "<=3.1"
    },
    "autoload": {
        "psr-4": {
            "Phplrt\\Parser\\": "src"
        },
        "files": [
            "src/polyfill.php"
        ]
    },
    "require-dev": {
        "phplrt/visitor": "^3.4",
        "phplrt/lexer": "^3.4",
        "phpunit/phpunit": "^9.5.20",
        "vimeo/psalm": "^5.12",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Phplrt\\Parser\\Tests\\": "tests"
        }
    },
    "provide": {
        "phplrt/parser-contracts-implementation": "^3.4"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev",
            "dev-main": "3.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
