{
    "name": "phplrt/parser",
    "type": "library",
    "description": "The phplrt Parser package.",
    "license": "MIT",
    "keywords": ["parser", "llk", "ll1", "lr", "slr", "language", "php"],
    "homepage": "https://github.com/phplrt",
    "support": {
        "issues": "https://github.com/phplrt/phplrt/issues",
        "source": "https://github.com/phplrt/parser"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "phplrt/source": "^4.0",
        "phplrt/buffer": "^4.0",
        "phplrt/exception": "^4.0",
        "phplrt/parser-contracts": "^4.0",
        "phplrt/lexer-contracts": "^4.0",
        "phplrt/ast-contracts": "^4.0",
        "symfony/deprecation-contracts": "^2.5|^3.0"
    },
    "replace": {
        "phplrt/grammar": "<=3.1",
        "phplrt/grammar-contracts": "<=3.1"
    },
    "autoload": {
        "psr-4": {
            "Phplrt\\Parser\\": "src"
        }
    },
    "require-dev": {
        "phplrt/visitor": "^4.0",
        "phplrt/lexer": "^4.0",
        "phpunit/phpunit": "^10.5|^11.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-strict-rules": "^1.6",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Phplrt\\Parser\\Tests\\": "tests"
        }
    },
    "provide": {
        "phplrt/parser-contracts-implementation": "^4.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev",
            "dev-main": "4.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
