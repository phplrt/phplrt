{
    "name": "phplrt/position",
    "type": "library",
    "description": "The phplrt position package.",
    "license": "MIT",
    "keywords": ["analyzing", "visualization", "input", "position", "line", "column", "offset", "utils"],
    "homepage": "https://github.com/phplrt",
    "support": {
        "issues": "https://github.com/phplrt/phplrt/issues",
        "source": "https://github.com/phplrt/position"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "phplrt/position-contracts": "^4.0",
        "phplrt/source-contracts": "^4.0",
        "symfony/deprecation-contracts": "^2.5|^3.0"
    },
    "autoload": {
        "psr-4": {
            "Phplrt\\Position\\": "src"
        }
    },
    "require-dev": {
        "phplrt/source": "^4.0",
        "phpunit/phpunit": "^10.5|^11.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-strict-rules": "^1.6"
    },
    "autoload-dev": {
        "psr-4": {
            "Phplrt\\Position\\Tests\\": "tests"
        }
    },
    "provide": {
        "phplrt/position-contracts-implementation": "^4.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev",
            "dev-main": "4.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
